---
driver:
  name: ec2
  region: us-west-1
  instance_type: t3a.small
  security_group_ids: ['kitchen_test_sg']
  tags:
    Name: Django Platform
    Service: Infrastructure
    Environment: Test
    Fund: 103010
    Org: 60412
    Department: Systems Engineering

provisioner:
  name: chef_zero
  always_update_cookbooks: true
  product_name: chef
  product_version: 15.3.14
  install_strategy: once
  attributes:
    firewall:
      allow_ssh: true
    http_platform:
      apache:
        install_test_suite: true
    django_platform:
      django_is_system_user: false

verifier:
  name: inspec

platforms:
  - name: ubuntu-18.04
  - name: ubuntu-16.04
  - name: ubuntu-14.04
  - name: debian-9
  - name: centos-7
  - name: centos-6
  - name: oracle-7.6
  - name: oracle-6.10
  - name: fedora-29
  - name: fedora-28
  - name: amazon2
  - name: amazon2-2018
  - name: sles-15
  - name: windows-2019
    driver:
      image_id: ami-004a782f694e8dde2
  - name: windows-2016
  - name: windows-2012r2
  - name: windows-2008r2sp1

suites:
  - name: default
    run_list:
      - recipe[chef_run_recorder::default]
      - recipe[test_harness::default]
    data_bags_path: 'test/data_bags'
    verifier:
      inspec_tests:
        - test/integration/default
        - test/integration/django_default
    attributes:
    includes:
      - ubuntu-18.04
      - ubuntu-16.04
      - debian-9
      - centos-7
      - oracle-7.6
      - oracle-6.10
  # These are private Django apps that are deployed with this cookbook
  # These may be useful as examples, but are of little use for testing by contributors
  - name: account
    run_list:
      - recipe[chef_run_recorder::default]
      - recipe[account_site::default]
    data_bags_path: 'test/data_bags'
    verifier:
      inspec_tests:
        - test/integration/default
        - test/integration/git_ssh
        - test/integration/account
    attributes:
    includes:
      - ubuntu-18.04
      - ubuntu-16.04
      - debian-9
      - centos-7
      - oracle-7.6
      - oracle-6.10
  - name: faculty
    run_list:
      - recipe[chef_run_recorder::default]
      - recipe[faculty_site::default]
    data_bags_path: 'test/data_bags'
    verifier:
      inspec_tests:
        - test/integration/default
        - test/integration/git_ssh
        - test/integration/faculty
    attributes:
    includes:
      - ubuntu-18.04
      - ubuntu-16.04
      - debian-9
      - centos-7
      - oracle-7.6
      - oracle-6.10
